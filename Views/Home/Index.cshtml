<script>
    const selectElement = document.getElementById('options');
    const selectedOptionsDiv = document.getElementById('selected-options');

    // Array to keep track of selected options
    let selectedOptions = [];

    // Function to display selected options
    function displaySelectedOptions() {
        selectedOptionsDiv.innerHTML = '<p>Selected Options:</p>';

        // Display selected options with remove option
        selectedOptions.forEach(option => {
            const optionTag = document.createElement('span');
            optionTag.classList.add('option-tag');
            optionTag.textContent = option;

            // Create remove icon
            const removeIcon = document.createElement('i');
            removeIcon.classList.add('bi', 'bi-x-circle', 'remove-icon');
            removeIcon.addEventListener('click', () => removeOption(option));

            // Append icon to option tag
            optionTag.appendChild(removeIcon);

            selectedOptionsDiv.appendChild(optionTag);
        });
    }

    // Function to add option to selected list
    function addOption(option) {
        if (!selectedOptions.includes(option)) {
            selectedOptions.push(option);
        }
        displaySelectedOptions();
    }

    // Function to remove option from selected list
    function removeOption(option) {
        selectedOptions = selectedOptions.filter(item => item !== option);
        displaySelectedOptions();
        // Also deselect it in the dropdown
        const options = selectElement.querySelectorAll('option');
        options.forEach(opt => {
            if (opt.value === option) {
                opt.selected = false;
            }
        });
    }

    // Event listener to handle changes in the select dropdown
    selectElement.addEventListener('change', () => {
        const selectedValues = Array.from(selectElement.selectedOptions).map(option => option.value);
        selectedValues.forEach(value => addOption(value));
    });

</script>
